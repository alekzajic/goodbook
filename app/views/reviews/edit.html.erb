<!-- EDIT REVIEW -->
<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">Edit Review</h5>
      </div>
      <div class="card-block">
        <%= render 'form', review: @review %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">

  $(function () {
    // init Summernote WYSiWYG
    initSummernote($('#review_content'));

    $('.star-rating-edit').each(function () {
      $(this).raty({
        path: '/assets/',
        scoreName: 'review[rating]',
        score: function () {
          return $(this).attr('data-score');
        }
      });

    });
  });
</script>