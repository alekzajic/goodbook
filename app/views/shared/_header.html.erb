<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-nav" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "goodbook", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="top-nav">
      <ul class="nav navbar-nav">
        <li class="<%= current_class?(root_path) %>"><%= link_to "News feed", root_path %></li>
        <li class="dropdown <%= current_class?(books_path) %>">
          <%= link_to books_path,
                      { class: "dropdown-toggle",
                        data: {toggle: "dropdown"},
                        role: "navigation",
                        aria: { haspopup: "true", expanded: "false" }} do %>
            Books <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "All Books", books_path %></li>
            <% if user_signed_in? %>
            <li role="separator" class="divider"></li>
            <li>
              <%= link_to "Add a Book", new_book_path %>
            </li>
            <% end %>
          </ul>
        </li>
      </ul>

      <!-- SEARCH-->
      <%= form_tag search_books_path, method: :get, class: "navbar-form navbar-left", role: "search" do %>
        <div class="form-group">
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for..." %>
            <span class="input-group-btn">
              <%= button_tag name: nil, class: "btn btn-primary", type: "submit" do %>
                <span class="glyphicon glyphicon-search"></span>
              <% end %>
            </span>

          </div>

        </div>

      <% end %>

      <!-- USER MENU -->
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="dropdown <%= current_class?(current_user) %>">
          <%= link_to current_user, {
                      class: 'dropdown-toggle',
                      data: { toggle: 'dropdown' },
                      role: 'button',
                      aria: {
                          haspopup: "true",
                          expanded: "false"
                      }
          } do %>
            <%= current_user.email %> <span class="caret"></span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="<%= current_class?(current_user) %>"><%= link_to "Profile", current_user %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path, class: 'active' %></li>
        <li><%= link_to "Sign In", new_user_session_path, class: 'active' %></li>
      <% end %>
      </ul>


    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>