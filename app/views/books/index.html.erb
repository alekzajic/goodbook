<!-- BOOKS -->
<div class="row">
  <% @books.each do |book| %>

  <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
    <div class="thumbnail">
      <%= link_to (image_tag book.cover.url(:medium), class: 'image'), book %>
    </div>
  </div>

  <% end %>
</div>
