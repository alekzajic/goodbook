<!-- New book form -->
<%= form_for @book, html: {multipart: true} do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

          <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :cover, class: "col-form-label" %>
      <%= f.file_field :cover, class: "form-control", aria: {describeby: "coverHelp"} %>
      <small id="coverHelp" class="form-text text-muted">Select book cover image.</small>
    </div>

    <div class="form-group">
      <%= f.label :title, class: "col-form-label" %>
      <%= f.text_field :title, class: "form-control", aria: {describeby: "titleHelp"} %>
      <small id="titleHelp" class="form-text text-muted">Title of the book.</small>
    </div>

    <div class="form-group">
      <%= f.label :pages, class: "col-form-label" %>
      <%= f.number_field :pages, class: "form-control", aria: {describeby: "pagesHelp"} %>
      <small id="pagesHelp" class="form-text text-muted">Number of pages the book has.</small>
    </div>

    <div class="form-group">
      <%= f.label :year_published, class: "col-form-label" %>
      <%= f.text_field :year_published, class: "form-control", aria: {describeby: "yearPublishedHelp"} %>
      <small id="yearPublishedHelp" class="form-text text-muted">Year the book was published.</small>
    </div>

    <div class="form-group">
      <%= f.label :isbn, class: "col-form-label" %>
      <%= f.text_field :isbn, class: "form-control", aria: {describeby: "isbnHelp"} %>
      <small id="isbnHelp" class="form-text text-muted">The ISBN code for the book.</small>
    </div>

    <div class="form-group ">
      <%= f.label :description, class: "col-form-label" %>
      <%= f.text_area :description, as: :summernote, data: {provider: "summernote"}, class: "form-control", aria: {describeby: "descriptionHelp"} %>
      <small id="descriptionHelp" class="form-text text-muted">Full description of the book.</small>
    </div>

    <div class="actions" style="margin-top: 30px">
      <%= f.submit "Save", class: "btn btn-danger" %>
      <%= link_to 'Cancel', books_path, class: "btn btn-secondary", style: "margin-left:10px" %>
    </div>

<% end %>
